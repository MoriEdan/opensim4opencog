<?xml version="1.0" encoding="ISO-8859-1"?>
<aiml>	
  <category>
    <pattern>RETURNCODE *</pattern>
    <template>
      <random>
        <li>I will think about it.</li>
      </random>
    </template>
  </category>

  <category>
    <pattern>RELOAD AIML</pattern>
    <template>
      <think>
        <srai>
        <system>aiml reload</system>
        </srai>
      </think>
      Reloading brain.
    </template>
  </category>

  <category>
    <pattern>ACTIVATE AIML</pattern>
    <template>
      <think>
        <srai>
          <system>aiml on</system>
        </srai>
      </think>
      I am now friendly.
    </template>
  </category>

  <category>
    <pattern>DEACTIVATE AIML</pattern>
    <template>
      <think>
        <srai>
          <system>aiml off</system>
        </srai>
      </think>
      I feel personal now.
    </template>
  </category>
  
  <category>
    <pattern>evraj</pattern>
    <template>
      <system>evinfo rae</system>
    </template>
  </category>

  <category>
    <pattern>evdata *</pattern>
    <template>
      <system>evinfo <star/></system>
    </template>
  </category>

  <!-- Sitting in secondlife -->
  <category>
    <pattern>SIT</pattern>
    <template>
      <think>
        <system>sit</system>
      </think>In <system>locate</system> am sitting now.
    </template>
  </category>  
  <category>
    <pattern>SIT THERE</pattern>
    <template>
      I am going to sit on <get name="object"/>
      <think>
        <system>
          sit <get name="object"/>
        </system>
      </think>
    </template>
  </category>
  
  <category>
    <pattern>
      SIT ON <optional>THE</optional> *
    </pattern>
    <template>
      Sit on the <star/>
      <system>
        sit on "<star/>" 1
      </system>
    </template>
  </category>

  <!-- touch in secondlife -->
  <category>
    <pattern>TOUCH IT</pattern>
    <template>
      Ok wierdo, I am touching <get name="object"/>
      <think>
        <system>
          touch <get name="object"/>
        </system>
      </think>
    </template>
  </category>
  
 <category>
    <pattern>
      SIT ON <optional>THE</optional> *
    </pattern>
    <template>
        <system>
        sit on "<star/>" 1
        </system>
    </template>
  </category>

  <category>
    <pattern>
      SITON *
    </pattern>
    <template>
      <system>
        sit on "<star/>" 1
      </system>
    </template>
  </category>


  <!-- Teleport in secondlife -->
  <category>
    <pattern>TELEPORT HERE</pattern>
    <template>
        Teleporting to <system>
          eval (thisClient.WorldSystem.GetObject "<id/> 1")
        </system> <system>locate <id/></system>
      <think>
        <system>
          say thread teleport 
          <system>
            (enqueue (.TeleportTo thisClient.WorldSystem.TheSimAvatar  (thisClient.WorldSystem.GetObject "<id/> 1")))
          </system>
      </system>
      </think>
      </template>
  </category>


  <!-- Current action command -->
  <category>
    <pattern>STOP FOLLOWING</pattern>
    <pattern>STOP FOLLOWING *</pattern>
    <pattern>FOLLOW NO ONE</pattern>
    <pattern>FOLLOW NO ONE *</pattern>
    <pattern>WAIT HERE</pattern>
    <template>
      <think>
        <system>stop-following</system>
      </think>Ok, I am on my own now.
    </template>
  </category>
  
  <!-- following in secondlife -->
   <category>
    <pattern>FOLLOW ME *</pattern>
    <pattern>FOLLOW ME</pattern>
    <template>
      <think>
        <system>
          follow* "<get name="name"/>" 1
        </system>
      </think>Ok, I am following you <get name="name"/>
    </template>
  </category>
  
  <category>
    <pattern>XXX WHAT ARE YOU DOING</pattern>
    <template>
      <system lang="lisp">thisClient.WorldSystem.TheSimAvatar.CurrentAction</system>
    </template>
  </category>

  <!-- simbot module command -->
  <category>
    <pattern>WANDER ARROUND</pattern>
    <template>
      <think>
        <system>simbot start</system>
      </think>Ok, I am on my own now wandering.
    </template>
  </category>

  <!-- dotlisp command -->
  <category>
    <pattern>DOTLISP *</pattern>
    <template>
      <system lang="lisp">
        <star/>
      </system>
    </template>
  </category>

  <!-- exec command -->
  <category>
    <pattern>EXEC *</pattern>
    <template>
      result of "<star/>" is: <system lang="bot">
        <star/>
      </system>
    </template>
  </category>

  <category>
    <pattern>
      <bot>name</bot> EXEC *
    </pattern>
    <template>
      result of "<star/>" is: <system lang="bot">
        <star/>
      </system>
    </template>
  </category>
</aiml>

