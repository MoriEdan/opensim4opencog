<aiml>
<msm name="main"/>
<state machine="main" name="idle" initial_prob="0.99" self_prob="0.9"/>
	<evidenceAssoc machine="main" state="idle" evidence="wildcard" prob="0.9"/>
	<evidencePattern evidence="wildcard" >*</evidencePattern>
	<transition machine="main" from="idle" to="user-greet-me" prob="0.1"/>
	<responsetopic machine="main" state="idle" topic="idlechat" prob="1.0">
	 <category>
	 <pattern>*</pattern>
	 <template>
		<random>
			<li> Just chilling.</li>
			<li> Idling along.</li>
			<li> Waiting for someone new.</li>
		</random>
	 </template>
	 </category>
	</responsetopic>

<state machine="main" name="user-greet-me" initial_prob="0.1" self_prob="0.1"/>

	<transition machine="main" from="user-greet-me" to="idle" prob="0.9"/>

	<evidenceAssoc machine="main" state="user-greet-me" evidence="common-greeting" prob="0.9"/>

	<evidencePattern evidence="common-greeting" >HELLO</evidencePattern>
	<evidencePattern evidence="common-greeting" >HI</evidencePattern>
	<evidencePattern evidence="common-greeting" >HOW ARE YOU</evidencePattern>

	<responsetopic machine="main" state="user-greet-me" topic="sayhi" prob="1.0">
	 <category>
	 <pattern>*</pattern>
	 <template>
		<random>
			<li> How are you?</li>
			<li> Hello there.</li>
			<li> Hi! </li>
		</random>
	 </template>
	 </category>
	</responsetopic>

</aiml>